{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "func-names": 0,
    "prefer-template": 0,
    "no-console": 0,
    "global-require": 0,
    "max-len": 0,
    "class-methods-use-this": 0,
    "react/sort-comp": 0,
    "react/forbid-prop-types": 0,
    "react/prefer-stateless-function": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/img-has-alt": 0,
    "arrow-body-style": 0,
    "consistent-return": 0,
    "no-underscore-dangle": 0,
    "yoda": 0,
    "arrow-parens": 0,
    "no-plusplus":0,
    "no-return-assign": 0,
    "react/no-multi-comp": 0,
    "import/extensions": [1, {
      "js": "never",
      "jsx": "never"
    }],
    "eqeqeq": 0,
    "jsx-a11y/label-has-for": 0,
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.test.js", "**/*.test.jsx"]}]
  },
  "plugins": [
    "flowtype"
  ],
  "settings": {
    "import/resolver": {
      "babel-module": {
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "globals": {
    "document": false,
    "window": false,
    "$": false,
    "__IS_NODE__": false,
    "$asyncWrapper": false,
  }
}
